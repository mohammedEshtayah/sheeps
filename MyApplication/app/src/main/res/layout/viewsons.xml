<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/idsons"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
android:textSize="55dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/date_Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/idsons"
                android:layout_toRightOf="@+id/idsons"
                android:text="Date Birth   : "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/date_Birth"

                android:layout_toEndOf="@+id/date_Birth"
                android:layout_toRightOf="@+id/date_Birth"

                android:textSize="20dp" />

            <TextView
                android:id="@+id/mother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_Birth"
                android:layout_alignStart="@+id/date_Birth"
                android:layout_alignLeft="@+id/date_Birth"

                android:layout_marginTop="30dp"
                android:text="mother   :    "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idmother"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mother"

                android:layout_toEndOf="@+id/mother"
                android:layout_toRightOf="@+id/mother"

                android:textSize="20dp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="59dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/mother"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_delete_black_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>